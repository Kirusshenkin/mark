# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Telegram Bot Security
TG_ADMINS=123456789,987654321  # Comma-separated list of admin user IDs
TG_CHAT_WHITELIST=  # Optional: comma-separated list of allowed user IDs (leave empty to allow all)

# Bot Configuration
DEFAULT_LANG=en  # Default language: en or ru
PREVIEW_MODE=false  # If true, commands are parsed but not executed

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_BASE_URL=https://api.bybit.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=crypto_trading_bot
DB_SSLMODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25  # Maximum open connections to database
DB_MAX_IDLE_CONNS=5   # Maximum idle connections in pool
DB_CONN_MAX_LIFETIME=5m  # Maximum lifetime of a connection

# ==============================================================================
# Stage 5: Hybrid AI Architecture (Local + Cloud)
# ==============================================================================

# AI Configuration - Legacy (будет заменено)
AI_PROVIDER=qwen  # or "kimi" or "ollama"
AI_API_KEY=your_ai_api_key
AI_BASE_URL=https://api.qwen.ai  # or Kimi/Ollama URL
AI_MODEL=qwen-plus  # or specific model name

# ===== Local AI (Ollama) - для 90% запросов =====
LOCAL_AI_ENABLED=true
# Для M1 Mac локальный запуск: http://localhost:11434
# Для Docker: http://ollama:11434 (внутри сети) или http://host.docker.internal:11434 (с Mac)
LOCAL_AI_URL=http://ollama:11434
# Рекомендуемые модели:
# - qwen2.5-coder:7b   (быстрая, ~6GB VRAM, качество 8/10)
# - qwen2.5-coder:14b  (лучшая, ~12GB VRAM, качество 9/10) ⭐
# - deepseek-coder-v2:16b (альтернатива, ~14GB VRAM)
LOCAL_AI_MODEL=qwen2.5-coder:14b

# ===== Cloud AI (Moonshot) - для 10% критичных запросов =====
CLOUD_AI_ENABLED=true
CLOUD_AI_PROVIDER=moonshot  # или "openai"
CLOUD_AI_URL=https://api.moonshot.ai
CLOUD_AI_KEY=sk-your_moonshot_api_key_here
# Модели Moonshot:
# - kimi-k2-turbo-preview  (MoE 1T, лучшая для agent tasks) ⭐
# - kimi-k2-0905-preview   (262k context, дешевле)
# - kimi-latest-128k       (vision support)
CLOUD_AI_MODEL=kimi-k2-turbo-preview

# ===== AI Router Configuration =====
# Определяет, какую модель использовать для каких задач
AI_USE_LOCAL_FOR_CHAT=true       # Telegram общение → Локальная модель
AI_USE_LOCAL_FOR_ANALYSIS=true   # Рыночный анализ → Локальная модель
AI_USE_CLOUD_FOR_DECISIONS=true  # Стратегические решения → Облачная модель

# Decision Agent Settings
# Режимы: shadow (только логирование), pilot (ограничения 50%), full (полная автономия)
AI_DECISION_MODE=pilot
# Интервал автоматических стратегических решений (секунды)
AI_DECISION_INTERVAL=3600  # 1 час

# Strategy Configuration
TRADING_SYMBOL=BTCUSDT
DCA_AMOUNT=10  # USDT amount for each DCA purchase
DCA_INTERVAL=24h  # 24h, 12h, 1w, etc.
AUTO_SELL_ENABLED=true
AUTO_SELL_TRIGGER_PERCENT=10  # Sell when profit reaches 10%
AUTO_SELL_AMOUNT_PERCENT=50  # Sell 50% of position
PRICE_CHECK_INTERVAL=5m  # Check price every 5 minutes

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# ==============================================================================
# Stage 4: Autonomous AI Trading
# ==============================================================================

# Risk Management Policy Profile
POLICY_PROFILE=moderate  # conservative, moderate, or aggressive
# See configs/policy.yaml for profile details

# Monitoring (when enabled in docker-compose.yml)
# GRAFANA_USER=admin
# GRAFANA_PASSWORD=admin
